<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home_page_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="26dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="ALBATROSS"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:gravity="right">
+
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/ic_outline_notifications_none_24" />

            <ImageView
                android:id="@+id/book_mark_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/book_mark" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/raleway_extrabold"
            android:text="@string/bold_wc"
            android:textColor="@color/black"
            android:textSize="32dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/waving_hand" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/sign_page"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:paddingBottom="10dp"
            android:src="@drawable/ic_outline_search_24" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:ems="11"
            android:fontFamily="@font/raleway_semibold"
            android:hint="Search"
            android:inputType="textWebPassword"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:paddingBottom="10dp"
            android:src="@drawable/setting_icon_" />

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_sign_up"
                android:padding="10dp"
                android:gravity="center"
                android:text="Recommended"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="@drawable/sign_page"
                android:ems="6"
                android:gravity="center"
                android:padding="10dp"
                android:text="Popular"
                android:textColor="#787474" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="@drawable/sign_page"
                android:ems="7"
                android:gravity="center"
                android:padding="10dp"
                android:text="Trending"
                android:textColor="#787474" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="@drawable/sign_page"
                android:padding="10dp"
                android:layout_marginRight="26dp"
                android:gravity="center"
                android:ems="5"
                android:text="Trending"
                android:textColor="#787474" />

        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="170dp"
            android:layout_height="220dp"
            app:riv_corner_radius="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/hotel_4"/>
            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="220dp"
                android:gravity="bottom|right">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/home_page_in_background"
                android:textColor="@color/white"
                android:ems="6"
                android:text="LUXURY HOTEL"/>
            </LinearLayout>
        </RelativeLayout>
            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="220dp"
                android:gravity="right|center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/home_page_in_background"
                    android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Faena Hotel"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:paddingLeft="25dp"
                    android:ems="8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="London, Uk"
                    android:textColor="#EFECEC"
                    android:gravity="left"
                    android:paddingLeft="25dp"
                    android:ems="8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.9"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="25dp"
                    android:textColor="@color/white"
                    android:gravity="left"
                    android:ems="8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$40 per/Night"
                    android:textColor="@color/white"
                    android:gravity="left"
                    android:paddingLeft="25dp"
                    android:ems="8"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="170dp"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="10dp"
            android:background="@drawable/sign_page"
            android:src="@drawable/hotel_2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:gravity="right|center"
            android:layout_marginRight="15dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:background="@drawable/home_page_in_background"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bulgari Resort"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:ems="8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Istanbul, Turkey"
                    android:textColor="#EFECEC"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:ems="8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.3"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/white"
                    android:gravity="left"
                    android:ems="8"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$47 per/Night"
                    android:textColor="@color/white"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:ems="8"/>
            </LinearLayout>
        </LinearLayout>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>