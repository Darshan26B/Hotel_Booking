<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".skipActivity2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rotationX="10"
        android:layout_weight="1"
        android:padding="10dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:src="@drawable/skip2_img"
        android:padding="5dp"
        android:scaleType="centerCrop"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:ems="12"
            android:text="Touch Your Dreams"
            android:fontFamily="@font/raleway_extrabold"
            android:textColor="@color/black"
            android:gravity="center|bottom"
            android:textSize="26dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="12"
            android:text="Everything you can dream about,available here."
            android:fontFamily="@font/raleway_semibold"
            android:textColor="@color/black"
            android:gravity="center|bottom"
            android:textSize="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|bottom">
            <ImageView
                android:id="@+id/Touch_Next1"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:src="@drawable/grop_1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S K I P"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/raleway_semibold"
            android:gravity="center"
            android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>